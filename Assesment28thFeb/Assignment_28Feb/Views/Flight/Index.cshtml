@model SearchViewModel

<h2>Flight Search</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div>
        <label>Source</label>
        <select asp-for="Source" asp-items="Model.SourceList"></select>
    </div>

    <div>
        <label>Destination</label>
        <select asp-for="Destination" asp-items="Model.DestinationList"></select>
    </div>

    <div>
        <label>Number of Persons</label>
        <input asp-for="NumberOfPersons" type="number" />
    </div>

    <div>
        <button formaction="SearchFlights" class="btn btn-success">
            Search Flights Only
        </button>

        <button formaction="SearchFlightsWithHotels" class="btn btn-warning">
            Search Flight + Hotel
        </button>
    </div>

    <div asp-validation-summary="All"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


